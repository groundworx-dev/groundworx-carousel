{
    "$schema": "https://schemas.wp.org/trunk/block.json",
	  "apiVersion": 3,
    "name": "groundworx/slide",
    "description": "A single slide within a carousel block.",
    "version": "2.0.0",
	  "title": "Slide",
    "parent": [ "groundworx/carousel" ],
    "category": "design",
    "supports": {
      "reusable": false,
      "html": false,
      "interactivity": true,
      "align": true,
      "color": {
        "text": true,
        "background": true,
        "gradients": true
      },
      "spacing": {
        "padding": true,
        "blockGap": true,
        "__experimentalDefaultControls": {
          "padding": true,
          "blockGap": true
        }
		  },
      "layout": {
        "default": {
          "type": "flex"
        },
        "allowSwitching": false,
        "allowEditing": true,
        "allowSizingOnChildren": true,
        "allowVerticalAlignment": true
      }
    },
    "usesContext": [],
    "attributes": {
      "minHeight": {
          "type": "string",
          "default": ""
      }
    },
    "render": "file:./render.php",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": [ "file:./style-index.css" ]
  }